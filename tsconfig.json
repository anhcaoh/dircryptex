{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "./app/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/features/*": [
        "./features/*"
      ],
      "@/api/*": [
        "./api/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "cypress"
  ]
}
